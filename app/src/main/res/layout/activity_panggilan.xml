<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".panggilanActivity"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/namaKamuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="36dp"
            android:fontFamily="@font/rubik_regular"
            android:text="@string/namaPanggilan"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/namaKamuEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaKamuTextView"
            android:layout_marginStart="36dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="36dp"
            android:hint="Contoh : Budi">

        </EditText>

        <TextView
            android:id="@+id/umurKamuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="36dp"
            android:fontFamily="@font/rubik_regular"
            android:text="@string/namaPanggilan"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_below="@id/namaKamuEditText">

        </TextView>

        <EditText
            android:id="@+id/umurKamuEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh : 12"
            android:layout_below="@id/umurKamuTextView"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="15dp">

        </EditText>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/buttonLanjut"
            style="@style/ButtonYellow"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="26dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="26dp"
            android:elevation="6dp"
            android:text="@string/lanjut"
            android:textAllCaps="false">

        </Button>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>